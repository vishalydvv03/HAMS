            "type": "string",
            "nullable": true
          },
          "followUpInstructions": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ReadDepartment": {
        "type": "object",
        "properties": {
          "departmentId": {
            "type": "integer",
            "format": "int32"
          },
          "deptName": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "doctors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReadDoctor"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ReadDoctor": {
        "type": "object",
        "properties": {
          "doctorId": {
            "type": "string",
            "format": "uuid"
          },
          "doctorName": {
            "type": "string",
            "nullable": true
          },
          "specialization": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDoctor": {
        "required": [
          "contactNo",
          "departmentId",
          "doctorName",
          "email",
          "password",
          "specialization"
        ],
        "type": "object",
        "properties": {
