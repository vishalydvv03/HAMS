            "type": "string",
            "format": "uuid"
          },
          "day": {
            "$ref": "#/components/schemas/WeekDay"
          },
          "startTime": {
            "type": "string",
            "format": "date-span",
            "nullable": true
          },
          "endTime": {
            "type": "string",
            "format": "date-span",
            "nullable": true
          },
