  "components": {
    "schemas": {
      "AddAppointment": {
        "type": "object",
        "properties": {
          "doctorId": {
            "type": "string",
            "format": "uuid"
          },
          "patientId": {
            "type": "string",
            "format": "uuid"
          },
          "appointmentTime": {
